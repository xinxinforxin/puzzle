<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" >
    <title>1元钱换880元郎朗独奏会票！</title>
    <link rel="stylesheet" href="../../common/static/main.css">
    <link rel="stylesheet" type="text/css" href="../static/index.css">
</head>
<body>
    <section class="pickup">
        <div class="puser"><img class="userpic" src="<%- locals.my_user_info.headimgurl%>"><img class="depintu" src="../static/image/depintu.png" ></div>
         <div class="sixpz">
            <div class="pz">
                <img src="../static/image/p1font.png" alt="" class="bigpic font">
                <% if(locals.maps[0]==0) {%>
                <img src="../static/image/p1back.png" alt="" class="bigpic back">
                <% } %>
            </div>
            <div class="pz">
                <img src="../static/image/p2fontyes.png" alt="" class="bigpic font">
                <% if(locals.maps[1]==0) {%>
                <img src="../static/image/p2backyes.png" alt="" class="bigpic back">
                <% } %>
            </div>
            <div class="pz">
                <img src="../static/image/p3font.png" alt="" class="bigpic font">
                <% if(locals.maps[2]==0) {%>
                <img src="../static/image/p3back.png" alt="" class="bigpic back">
                <% } %>
            </div>
            <div class="pz">
                <img src="../static/image/p4font.png" alt="" class="bigpic font">
                <% if(locals.maps[3]==0) {%>
                <img src="../static/image/p4back.png" alt="" class="bigpic back">
                <% } %>
            </div>
            <div class="pz">
                <img src="../static/image/p5font.png" alt="" class="bigpic font">
                <% if(locals.maps[4]==0) {%>
                <img src="../static/image/p5back.png" alt="" class="bigpic back">
                <% } %>
            </div>
            <div class="pz">
                <img src="../static/image/p6font.png" alt="" class="bigpic font">
                <% if(locals.maps[5]==0) {%>
                <img src="../static/image/p6back.png" alt="" class="bigpic back">
                <% } %>
            </div>
        <div class="clear"></div>
        <div class="fshelpbtn">
            <% if(locals.win==0){ %>
            <img src="../static/image/fshelp.png" alt="" class="btn" id="fshelpbtn">
            <% } else{ %>
            <img src="../static/image/ticket.png" alt="" class="btn" id="ticketbtn">
           <%  } %>
        </div>
    </section>
    <div id="addmsg">
        <div>(详细规则下拉至底部可见)</div>
    </div>
    <div id="bg2">
     <section class="messagescroll">
        <header class='mesheader'><img class='fans' src='../static/image/fans.png'><img class='count' src='../static/image/count.png' ><span class="countnum">0</span></header>
        <div id="appendmsg"></div>
    </section>
     <section class="commentary">
        <div id="bottomfont">
            <div>长按图片，识别二维码</div>
            <div>或搜索公众号： <input id="publicid" type="text" value="yeaohyea" />(可复制)</div>
            <div>每周都有高哔～格品质礼物哦</div>
        </div>
        <div id="qrcode"> <img src="../static/image/qrcode.png" alt=""></div>
    </section>
    <section id="space">
        
    </section>
    </div>
    <% if(locals.can_do&&!locals.win){ %>
    <section id="firstpick" class="babg">
        <img src="../static/image/first-pick.png"  alt="">
    </section>
    <% } %>
 <% if(!locals.can_do&&!locals.win){ %>
    <section id="nochance" class="babg">
        <img src="../static/image/nochance.png"  alt="">
    </section>
  <% } %>
    <section id="win" class="babg">
        <img  class="clowin" src="../static/image/closewin.png"  alt="">
        <img src="../static/image/winpic.png"  alt="" id="winpic">
        <span id="exchangecode"></span>
    </section>
    <section id="sharefs">
        <img src="../static/image/music.png" alt="" class="share5line">
        <div class="pinjie">
        </div>
    </section>
</body>
<script src="../../common/static/jquery.min.js"></script>
    <script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
    <script>
        var can_do = '<%- locals.can_do %>';
        var maps = '<%- locals.maps %>';
        var openid = '<%- locals.my_user_info.openid %>';
        var f_info_length = '<%- locals.f_info.length %>';
        var win = '<%- locals.win %>';
        var num =3;
        maps = maps.split(",");
        if(win==1){
            $('#win').show();
        }
        if(f_info_length==0){
            $('.messagescroll').hide();
        }
        else{
        }
        $('#firstpick').click(function(){
        $.ajax({
            type:'get',
            url:"/draw/do",
            success:function(data){
            alreadyopen();
            if(data.wincode.length > 0){
                $('#win').show();
                $('#exchangecode').html(data.wincode);
                }
                $('.pz').eq(data.key).find('.bigpic').delay(1000).addClass('sharking');
                $('.pz').eq(data.key).find('.back').delay(2000).hide(0);
                newest(num,openid);
                newmap(openid);
            }
        });
        $(this).hide();
        });
        $('#fshelpbtn').click(function(){
            $('#sharefs').show();
        });
        $('#sharefs').click(function(){
            $(this).hide();
        });
        $('#welfaremsg').click(function(){
            $(this).hide();
        });
        $('.clowin').click(function(){
            $('#win').hide();
        });
        $('#nochance').click(function(){
            $(this).hide();
        });
        $('#ticketbtn').click(function(){
            $('#win').show();
        });
        function alreadyopen(){
            $('#firstpick').hide();
        }
        function newest(num,openid){
            var msghtml = " ";
            var param = { "num": 3, "openid": openid };
            $.ajax({
                url:'/draw/getFriendsDraw',
                type:'get',
                data:param,
        async: false,
                success:function(data){
                    var fsdata=data.data;
                    if(data.code == 200){
                        fsdata.forEach(function(v,i){
                            msghtml += '<div class="mesblock"><img class="fspic" src="'+ v.f_user_info.headimgurl+'"><span class="fsid">'+v.f_user_info.nickname+'</span><span class="fstime">'+v.datetime +'</span><span class="fsmsg">抽中 '+parseInt(v.map+1)+'号拼图，还有什么不满足</span></div>';
                            if(i<2){
                                msghtml += '<div class="geline"> </div>';

                            }
             });$("#appendmsg").html(msghtml);
                    }else{
                    }
                    if(data.total){
                            $(".countnum").html(data.total);
                        }
                }
            });
        }
        function newmap(openid){
            $.ajax({
                url:'/draw/getUserMaps',
                type:'get',
                data:{ 'openid':openid },
                async : false, 
                success:function(data){
                    for (var i = 0; i < data.length; i++) {
                        if(data[i] == 1){
                            $('.pz').eq(i).find('.back').hide(0);
                        }
                    }
                }
            });
        }
        setInterval(function(){
           newest(num,openid);
        },2000);
        setInterval(function(){
            newmap(openid);
        },2000);
    </script>
    <script type="text/javascript" src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
    <script>
        wx.config(<%- JSON.stringify(locals.w_js) %>);
        var g_link = '<%- locals.share_url %>';
    </script>
    <script src="../static/share.js"></script>
    <script src="../static/index.js"></script>
</html>





















